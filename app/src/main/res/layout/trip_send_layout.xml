<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/toolbar"
        android:id="@+id/include"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ITEMS"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/items"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


        <ListView
            android:layout_below="@+id/items"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/listView_items" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERSONS"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/persons"
        android:layout_below="@+id/listView_items"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>


        <ListView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:id="@+id/listView_persons"
            android:layout_below="@+id/persons"
           />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_sms"
        android:layout_below="@+id/listView_persons"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_email"
        android:layout_below="@+id/listView_persons"
        android:layout_toRightOf="@+id/button_sms"
        android:layout_toEndOf="@+id/button_sms"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"/>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:id="@+id/margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#ff2bff0d"/>

    <com.aloknath.splitmytrip.CustomViews.RoundedImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/margin"
        android:layout_toRightOf="@+id/margin"
        android:layout_toEndOf="@+id/margin"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Person Name: "
        android:textSize="10sp"
        android:textColor="#000000"
        android:id="@+id/person_name"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alok Nath Saha"
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/edit_person_name"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/person_name"
        android:layout_toEndOf="@+id/person_name"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="3dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount Paid: "
        android:id="@+id/amount_paid"
        android:layout_alignLeft="@+id/person_name"
        android:layout_alignStart="@+id/person_name"
        android:layout_below="@+id/person_name"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 50"
        android:id="@+id/edit_amount_paid"
        android:layout_toEndOf="@+id/amount_paid"
        android:layout_toRightOf="@+id/amount_paid"
        android:layout_below="@+id/person_name"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Amount Owed: "
    android:id="@+id/amount_owed"
    android:layout_below="@+id/amount_paid"
    android:layout_marginTop="5dp"
    android:textSize="10sp"
    android:textColor="#000000"
    android:layout_alignLeft="@+id/amount_paid"
    android:layout_alignStart="@+id/amount_paid"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 250"
        android:id="@+id/edit_amount_owed"
        android:layout_toEndOf="@+id/amount_owed"
        android:layout_toRightOf="@+id/amount_owed"
        android:layout_below="@+id/edit_amount_paid"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount To Get: "
        android:id="@+id/amount_to_get"
        android:layout_below="@+id/amount_owed"
        android:layout_marginTop="5dp"
        android:textSize="10sp"
        android:textColor="#000000"
        android:layout_alignLeft="@+id/amount_owed"
        android:layout_alignStart="@+id/amount_owed"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" 10"
        android:id="@+id/edit_amount_to_get"
        android:layout_toEndOf="@+id/amount_to_get"
        android:layout_toRightOf="@+id/amount_to_get"
        android:layout_below="@+id/edit_amount_owed"
        android:layout_marginTop="0dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>



</RelativeLayout>
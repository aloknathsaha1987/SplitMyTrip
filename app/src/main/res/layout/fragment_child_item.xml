<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:id="@+id/imageView2"
        android:layout_alignParentTop="true"
        android:background="#ff34ffd8"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/trip_name"
        android:layout_alignStart="@+id/trip_name"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trip: "
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/trip_name"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOSTON"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/edit_trip_name"
        android:layout_alignTop="@+id/trip_name"
        android:layout_toRightOf="@+id/trip_name"
        android:layout_toEndOf="@+id/trip_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost Of Item: "
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/item_cost"
        android:layout_below="@+id/trip_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$150"
        android:textSize="25sp"
        android:textColor="#000000"
        android:id="@+id/edit_item_cost"
        android:layout_alignTop="@+id/item_cost"
        android:layout_toRightOf="@+id/item_cost"
        android:layout_toEndOf="@+id/item_cost"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Item Cost: "
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/textView4"
        android:layout_below="@+id/edit_item_cost"
        android:layout_alignLeft="@+id/item_cost"
        android:layout_alignStart="@+id/item_cost"
        android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:background="#ff0af4d9"
        android:hint="Amount"
        android:id="@+id/editText2"
        android:inputType="phone"
        android:digits="1234567890"
        android:layout_below="@+id/edit_item_cost"
        android:layout_alignLeft="@+id/edit_item_cost"
        android:layout_alignStart="@+id/edit_item_cost"
        android:layout_marginTop="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/button_save_item"
        android:layout_below="@+id/imageView2"
        android:layout_toRightOf="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="110dp"
        />

</RelativeLayout>
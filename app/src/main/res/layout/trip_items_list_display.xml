<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="10dp"
        android:layout_height="100dp"
        android:id="@+id/margin"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#ffff0200"/>

    <com.aloknath.splitmytrip.CustomViews.RoundedImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/margin"
        android:layout_toRightOf="@+id/margin"
        android:layout_toEndOf="@+id/margin"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Name "
        android:textSize="15sp"
        android:textColor="#000000"
        android:id="@+id/trip_item"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food"
        android:textSize="20sp"
        android:textColor="#000000"
        android:id="@+id/edit_trip_item"
        android:layout_alignTop="@+id/imageView2"
        android:layout_toRightOf="@+id/trip_item"
        android:layout_toEndOf="@+id/trip_item"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="7dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item Cost: "
        android:id="@+id/item_cost"
        android:layout_alignLeft="@+id/trip_item"
        android:layout_alignStart="@+id/trip_item"
        android:layout_below="@+id/trip_item"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$250"
        android:id="@+id/edit_item_cost"
        android:layout_toEndOf="@+id/item_cost"
        android:layout_toRightOf="@+id/item_cost"
        android:layout_below="@+id/trip_item"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"/>


</RelativeLayout>
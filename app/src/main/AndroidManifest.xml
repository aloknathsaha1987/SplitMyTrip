<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aloknath.splitmytrip" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity android:name=".Activities.SplashActivity" android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
        </activity>

        <activity android:name=".Activities.NewTripActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.ExistingTripActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.SendAmountActivity" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.GoogleMapsActivity" android:configChanges="orientation|screenSize"/>

    </application>

</manifest>
